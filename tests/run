#/bin/sh

if [ $# -eq 1 ]; then
    echo '# flake8 ################################'
    pipenv run flake8 $1
    echo ''
    echo '# mypy ##################################'
    pipenv run mypy --ignore-missing $1
    echo ''
    echo '# test ##################################'
    pipenv run python -m pytest $1 -vv --duration=0
else
    echo '# flake8 ################################'
    pipenv run flake8 ./
    echo ''
    echo '# mypy ##################################'
    pipenv run mypy --ignore-missing ./
    echo ''
    echo '# test ##################################'
    pipenv run python -m pytest -vv
fi
